<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.skeleton.mvp.ui.otp.OTPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/sign_in_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/spacing_xxxlarge"
            app:srcCompat="@drawable/check_email_img" />

        <TextView
            android:id="@+id/tvCheck"
            style="@style/CustomTextAppearance.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginTop="@dimen/spacing_large"
            android:gravity="center"
            android:text="Check your Email"
            android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
            android:textColor="#333333"
            android:textSize="@dimen/font_xxlarge" />

        <TextView
            android:id="@+id/tvSubtitile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCheck"
            android:layout_marginVertical="17dp"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:gravity="center"
            android:text="We have sent a verification link to your email amandeep.chauhan@deltaschool.in"
            android:textColor="#333333"
            android:textSize="@dimen/font_xlarge" />


        <LinearLayout
            android:id="@+id/llChangeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="2dp"
                android:src="@drawable/ic_edit_group"
                android:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Change Email"
                android:textColor="#4facfe"
                android:textSize="16.3sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llOTP"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/fugu_margin_10"
            android:background="@drawable/curved_chiku_button"
            android:text="Go to Sign In"
            android:textAllCaps="false"
            android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
            android:textColor="@color/white"
            android:textSize="@dimen/font_xlarge" />

        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="00:20 sec"
            android:textColor="#e74141"
            android:textSize="13.4sp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/fugu_margin_10"
            android:background="@color/transparent"
            android:paddingHorizontal="15dp"
            android:text="Resend Email"
            android:textAllCaps="false"
            android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
            android:textColor="@color/green_color_picker"
            android:textSize="@dimen/font_xlarge"
            android:visibility="visible" />

    </LinearLayout>
</ScrollView>
