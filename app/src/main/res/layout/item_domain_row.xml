<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    android:background="@drawable/rectangle_white"
    app:contentPadding="@dimen/spacing_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlChannelIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivContactImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ring_greyy" />

            <TextView
                android:id="@+id/tvContactIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fugu_margin_5"
            android:paddingStart="@dimen/fugu_margin_5"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBusinessName"
                style="@style/CustomTextAppearance.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/spacing_small"
                android:textColor="@color/black"
                tools:text="@string/your_business_name" />

            <TextView
                android:id="@+id/tvDomainName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_small"
                android:textColor="@color/black"
                android:visibility="visible"
                tools:text="@string/your_domian_officechat_com" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>