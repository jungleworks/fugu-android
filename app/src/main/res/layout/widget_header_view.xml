<?xml version="1.0" encoding="utf-8"?>
<com.skeleton.mvp.utils.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/white"
                tools:text="@string/amandeep_chauhan"
                android:textSize="@dimen/header_view_start_text_size"
                android:textStyle="bold"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
                tools:textColor="@android:color/black" />

            <TextView
                android:id="@+id/group_info_last_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                tools:textColor="@android:color/black"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                android:textColor="@android:color/white"
                tools:text="Created by you" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            android:src="@drawable/ic_edit_group"
            android:visibility="invisible" />
    </LinearLayout>
</com.skeleton.mvp.utils.HeaderView>