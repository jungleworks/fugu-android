<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_border_normal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fugu_padding_12"
    android:paddingTop="@dimen/fugu_padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvChannelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_weight="0.7"
            android:paddingBottom="@dimen/fugu_padding_10"
            android:paddingEnd="@dimen/fugu_padding_10"
            android:paddingStart="@dimen/fugu_padding_10"
            android:paddingTop="0dp"
            android:text="General Chat"
            android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_weight="0.3"
            android:gravity="end"
            android:paddingBottom="@dimen/fugu_padding_10"
            android:paddingEnd="@dimen/fugu_padding_10"
            android:paddingStart="@dimen/fugu_padding_10"
            android:paddingTop="0dp"
            android:textSize="12sp"
            android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
            android:text="Today" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fugu_padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fugu_margin_5"
                    android:text="@string/amandeep_chauhan"
                    android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fugu_margin_5"
                    android:layout_marginStart="@dimen/fugu_margin_5"
                    android:layout_marginTop="@dimen/fugu_margin_5"
                    android:text="12:00 PM"
                    android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlImageMessage"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMessage"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/fugu_margin_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_play_video"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llFileView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/attachment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fugu_margin_10"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fugu_padding_5"
                        android:text="ieuheiroc vjrvienirnf ebf" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFileSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fugu_padding_5"
                        android:layout_marginTop="@dimen/fugu_padding_5"
                        android:text="@string/_25_mb" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fugu_margin_5"
                android:text="@string/amandeep_chauhan"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvThread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fugu_margin_5"
                android:layout_marginStart="@dimen/fugu_margin_5"
                android:layout_marginTop="@dimen/fugu_margin_5"
                android:text="From a thread"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>