<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.skeleton.mvp.ui.otp.OTPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/sign_in_image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingEnd="@dimen/spacing_large"
               android:paddingStart="@dimen/spacing_large"
               android:paddingTop="@dimen/spacing_xxxlarge"
               android:layout_centerHorizontal="true"
               app:srcCompat="@drawable/ic_fugu_bg" />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
               app:srcCompat="@drawable/ic_fugu_avatar"/>
       </RelativeLayout>

        <TextView
            android:id="@+id/tvCheck"
            style="@style/CustomTextAppearance.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_marginTop="@dimen/spacing_large"
            android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
            android:gravity="center"
            android:text="Check your email!"
            android:textColor="#333333"
            android:textSize="@dimen/font_xxlarge" />

        <TextView
            android:id="@+id/tvSubtitile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCheck"
            android:layout_margin="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginStart="@dimen/spacing_large"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/font_xlarge" />


        <LinearLayout
            android:id="@+id/llOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginStart="@dimen/spacing_large"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:background="@drawable/rectangle_border_curved"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_xxxlarge" />

            <EditText
                android:id="@+id/etTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:background="@drawable/rectangle_border_left"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                android:textColor="@color/black"
                android:textSize="@dimen/font_xxxlarge" />

            <EditText
                android:id="@+id/etThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_weight="0.15"
                android:background="@drawable/rectangle_border_left_curved"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                android:textColor="@color/black"
                android:textSize="@dimen/font_xxxlarge" />

            <EditText
                android:id="@+id/etFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_weight="0.15"
                android:background="@drawable/rectangle_border_curved"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                android:textColor="@color/black"
                android:textSize="@dimen/font_xxxlarge" />

            <EditText
                android:id="@+id/etFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:background="@drawable/rectangle_border_left"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                android:textColor="@color/black"
                android:textSize="@dimen/font_xxxlarge" />

            <EditText
                android:id="@+id/etSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:background="@drawable/rectangle_border_left_curved"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="@style/CustomTextAppearance.TitilliumWeb"
                android:textColor="@color/black"
                android:textSize="@dimen/font_xxxlarge" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llOTP"
            android:layout_marginBottom="@dimen/fugu_margin_10"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:textAppearance="@style/CustomTextAppearance.TitilliumWebSemiBold"
            android:background="@drawable/curved_chiku_button"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_xlarge" />
    </LinearLayout>
</ScrollView>
